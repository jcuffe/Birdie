<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Birdie</item>
    </style>

    <style name="ActionBar.Solid.Birdie" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_background_textured_birdie</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
    </style>

    <style name="ActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff3f3f3</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="BirdieText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ScoreText" parent="BirdieText">
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StaticText" parent="BirdieText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="scoreButton">
        <item name="android:textColor">@color/score_button</item>
        <item name="android:background">@drawable/score_button</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>
